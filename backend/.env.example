# Database Configuration
DATABASE_URL="postgresql://tgsecret:your_secure_password@localhost:5432/tgsecret_db"

# Redis Configuration
REDIS_URL="redis://localhost:6379"

# JWT Secrets (generate with: openssl rand -hex 32)
JWT_SECRET="your_jwt_secret_key_min_32_chars_here"
JWT_REFRESH_SECRET="your_jwt_refresh_secret_key_min_32_chars_here"

# Encryption Key (generate with: openssl rand -hex 32)
SERVER_ENCRYPTION_KEY="your_32_byte_hex_key_for_encryption_here"

# Telegram Configuration
TELEGRAM_API_ID="your_telegram_api_id"
TELEGRAM_API_HASH="your_telegram_api_hash"
TELEGRAM_BOT_TOKEN="your_bot_token_from_botfather"

# Server Configuration
PORT=3001
NODE_ENV=development

# Webhook Configuration
USERBOT_WEBHOOK_SECRET="shared_secret_with_userbot_min_32_chars"

# CORS Origins (comma-separated)
CORS_ORIGINS="http://localhost:3000,http://localhost:3001"

# Rate Limiting
RATE_LIMIT_TTL=60000
RATE_LIMIT_MAX=60

# File Upload
MAX_FILE_SIZE=2147483648
UPLOAD_PATH="./storage"

# Logging
LOG_LEVEL=info
LOG_FILE_PATH="./logs"
